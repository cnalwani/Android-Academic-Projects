<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.map524s1a.snakegame.MainActivity"
    >

  <com.map524s1a.snakegame.SnakePanelView
      android:id="@+id/snake_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <LinearLayout
      android:layout_marginTop="10dp"
      android:layout_below="@id/snake_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/top_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:src="@drawable/top"
        android:padding="15dp"
        android:background="@drawable/btn_round"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/main_ll"
        android:gravity="center"
        android:layout_below="@+id/top_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/left_btn"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:padding="15dp"
          android:background="@drawable/btn_round"
          android:src="@drawable/left"
          android:textColor="@android:color/white"

          />
      <ImageView
          android:id="@+id/start_btn"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:padding="15dp"
          android:src="@drawable/start"
          />

      <ImageView
          android:id="@+id/right_btn"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:padding="15dp"

          android:background="@drawable/btn_round"
          android:src="@drawable/right"
          android:textColor="@android:color/white"/>

    </LinearLayout>

    <ImageView
        android:layout_below="@+id/main_ll"
        android:id="@+id/bottom_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_round"
        android:src="@drawable/bottom"
        android:textColor="@android:color/white"/>


  </RelativeLayout>
  </LinearLayout>

</RelativeLayout>